	<h3>Surgeon (<%= @surgeon.first_name %> <%= @surgeon.last_name %>)'s Items</h3>
		
	<br/>
	<p><%= link_to "Add new item", :action=>"add" %></p>

	<br/>
	<table border="1">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Cost</th>
			<th>Creatd Date</th>
			<th>Updated Date</th>
			<th>Action</th>
		</tr>
		<% @surgeonItems.each do |item| %>
			<tr>
				<td><%= item.name %></td>
				<td><%= item.description %></td>
				<td><%= item.cost %></td>
				<td><%= item.created_at %></td>
				<td><%= item.updated_at %></td>
				<td><%= link_to "Edit", :action=>"edit", :id=>item.id %> | <%= link_to "Delete", {:action=>"delete", :id=>item.id}, {:confirm=>"Do you want to delete this?"} %> </td>
			</tr>
		<% end %>
	</table>
		
	
