	<h3>Edit your item</h3>
	<% form_for :item, @item do |f| %>
		<%= f.hidden_field :item_id, :value=>@item.id  %>	
		<table border="1">
			<tr>
				<td>Name:</td>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<td>Description:</td>
				<td><%= f.text_field :description %></td>
			</tr>
			<tr>
				<td>Cost:</td>
				<td><%= f.text_field :cost %></td>
			</tr>

			<tr>
				<td>Action:</td>
				<td><%= submit_tag "Save", :name=>"save" %> | <%= submit_tag "Cancel", :name=>"cancel" %></td>
			</tr>
		<table>
	<% end %>
